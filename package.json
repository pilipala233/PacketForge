{
  "name": "packetforge",
  "version": "0.1.0",
  "description": "Authorized proxy tool for local testing.",
  "private": true,
  "type": "module",
  "main": "src/main/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/pilipala233/PacketForge.git"
  },
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "test": "node --test",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^1.5.0"
  },
  "build": {
    "appId": "com.packetforge.app",
    "productName": "PacketForge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "pilipala233",
        "repo": "PacketForge"
      }
    ]
  }
}
